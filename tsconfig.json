{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@klonzo/*": [
        "packages/*/src"
      ]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ]
  }
}